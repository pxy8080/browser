<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_history"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp">

    <RelativeLayout
        android:id="@+id/hostory_icon_rl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:background="@drawable/bg_website_icon">

        <ImageView
            android:id="@+id/hostory_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/bg_website_icon"
            android:src="@drawable/icon_image_broken" />
    </RelativeLayout>


    <TextView
        android:id="@+id/history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hostory_icon_rl"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="70dp"
        android:layout_toEndOf="@+id/hostory_icon_rl"
        android:singleLine="true"
        android:text="标题"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/history_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hostory_icon_rl"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="70dp"
        android:layout_toEndOf="@+id/hostory_icon_rl"
        android:singleLine="true"
        android:text="内容"
        android:textSize="12sp" />


    <ImageView
        android:id="@+id/item_history_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:paddingHorizontal="5dp"
        android:paddingVertical="10dp"
        android:src="@drawable/icon_history_close" />

</RelativeLayout>