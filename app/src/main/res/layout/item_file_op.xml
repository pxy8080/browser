<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:strokeColor="#00000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/video_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:layout_toLeftOf="@+id/btn_close_overflow"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:text="test"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btn_close_overflow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="30dp"
                android:padding="15dp"
                android:src="@drawable/icon_pageclose" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/op"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_bar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_share"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="30dp"
                android:text="分 享"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/icon_menu_share" />

            <TextView
                android:id="@+id/btn_rename"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="30dp"
                android:text="重 命 名"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/icon_rename" />

            <TextView
                android:id="@+id/btn_downloadpath"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="30dp"
                android:text="下 载 目 录"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/icon_downloadpath" />

            <TextView
                android:id="@+id/btn_towebsite"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="30dp"
                android:text="前 往 网 址"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/icon_website" />

            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="30dp"
                android:text="删 除"
                android:textSize="18sp"
                app:drawableStartCompat="@drawable/icon_delete" />

        </LinearLayout>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>

